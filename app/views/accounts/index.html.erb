<% content_for :main_content do %>
  <div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
      <ul class="breadcrumb">
        <%= render 'partials/home' %>
        <li><%= link_to '系统设置', 'javascript:;' %></li>
        <li><%= link_to '商家信息', profile_path %></li>
      </ul>
      <%#= render '/layouts/qrcode' %>
    </div>

    <div class="page-content">
      <div class="row">
        <div class="col-sm-12">
          <%= form_for current_user, validate: true, html: { class: 'form width-800' } do |f| -%>
            <div class="form-group">
              <!-- <label class="control-label">套餐版本</label> -->
              <div class="clearfix">
                套餐版本：<%= current_user.account_product.try(:name) %>, 有效期至：<%= current_user.expired_at %>
              </div>
            </div>

            <div class="form-group">
              <label class="control-label">商家名称<span class="required-star">*</span></label>
              <div class="clearfix">
                <%= f.text_field :nickname, class: 'col-sm-4' %>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label">企业名称</label>
              <div class="clearfix">
                <%= f.text_field :company_name, class: 'col-sm-4' %>
              </div>
            </div>

            <div class="form-group">
              <label class="control-label">联系人</label>
              <div class="clearfix">
                <%= f.text_field :contact, class: 'col-sm-4' %>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label">电子邮箱<span class="required-star">*</span></label>
              <div class="clearfix">
                <%= f.text_field :email, class: 'col-sm-4' %>
              </div>
            </div>

            <div class="form-group">
              <label class="control-label">货到付款<span class="required-star">*</span></label>&nbsp;&nbsp;&nbsp;
              <%= f.check_box :cashpay %>&nbsp;开通
            </div>

            <div class="form-group">
              <label class="control-label">客服电话<span class="required-star">*</span> <small class="text-warning">小程序的在线客服拨打电话</small></label>
              <div class="clearfix">
                <%= f.text_field :tel, class: 'col-sm-4' %>
              </div>
            </div>

            <div class="form-group">
              <label class="control-label">手机号码<span class="required-star">*</span> <small class="text-warning">用户下单支付成功后发送短信提醒</small></label>
              <div class="clearfix">
                <%= f.text_field :mobile, class: 'col-sm-4' %>
              </div>
            </div>

            <div class="form-group">
              <label class="control-label">商家地址<span class="required-star">*</span> <small class="text-warning">小程序一键导航地图</small></label>
              <div class="clearfix">
                <%= f.text_field :address, placeholder: '请填写完整地址信息，例如：上海市浦东新区祖冲之路2305号', class: 'col-sm-6' %>
              </div>
            </div>

            <!-- <div class="form-group">
              <label class="control-label">选择套餐<span class="required-star">*</span></label>
              <div class="clearfix">
                <%#= f.select :template, Account::TEMPLATE.to_a, {}, class: 'col-sm-4' %>
              </div>
            </div> -->

            <div class="form-group">
              <label class="control-label">商家简介<span class="required-star">*</span> <small class="text-warning">小程序关于我们页面内容</small></label>
              <div class="clearfix">
                <%= f.text_area :description, maxlength: 240, rows: 8, class: 'col-sm-6' %>
              </div>
            </div>
            
            <div class="form-group">
              <input type="submit" class="btn btn-primary btn-sm" id="save_password" value="保存">
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>
<% end %>
