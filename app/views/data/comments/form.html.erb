<%# @shop_branch.can_validate = true %>
<%= form_for @comment, url: data_comment_path(@comment), :html => { :class => 'box-form fl' } do |f| %>
  <div class="modal-body">
    <div class="row">
      <div class="col-xs-12">
        <div class="alert alert-block alert-info">
          <strong class="pull-left"><%= @comment.user.try(:name) %>：</strong>
          <ul class="vwebsiteHeadAlert">
            <li><%= @comment.try(:comment) %></li>
          </ul>
        </div>
      </div>
      <div class="col-md-12">

        <div class="form-group">
          <label class="control-label">回复内容：<span class="required-star">* </span></label>
          <div class="col-md-8">
            <%= f.text_area :reply, class: "form-control", rows: '5', cols: '100%' %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="modal-footer">
    <button type="submit" class="btn btn-sm btn-primary" data-fn="submit">确定</button>
    <button type="button" class="btn btn-sm btn-default" data-dismiss="modals">取消</button>
  </div>
<% end %>

