<% content_for :main_content do %>
  <div class="main-content ">
    <div class="breadcrumbs" id="breadcrumbs">
      <ul class="breadcrumb">
        <%= render 'partials/home' %>
        <!-- <li><%#= link_to '微服务', bookings_path %></li> -->
        <li><%= link_to '营销活动', ec_activities_path %></li>
      </ul>
      <%#= render '/layouts/qrcode' %>
    </div>

    <div class="page-content">
      <%#= render "ec/activities/top_activities" %>
      <div class="row">
        <div class="col-xs-12 margin-top-20">
          <div class="pull-right">
            <%= link_to '新增营销活动', 'javascript:;', data: {toggle: 'modals', height: '1000', title: '新增营销活动', iframe: new_ec_activity_path}, class: 'btn btn-primary btn-sm' %>
          </div>
        </div>

        <div class="col-sm-12 margin-top-10">
          <table id="goodsTable" class="table table-striped table-bordered table-hover dataTable ">
            <thead>
            <tr>
              <th>活动名称</th>
              <th>图片</th>
              <th>活动名称</th>
              <th>创建时间</th>
              <th>状态</th>
              <th>操作</th>
            </tr>
            </thead>
            <tbody id="colleges_body">
            <% @activities.each do |activity| %>
                <tr>
                  <td><%= activity.title %></td>
                  <td><%= image_tag(activity.pic_url, width: 50) if activity.pic_key %></td>
                  <td><%= activity.created_at %></td>
                  <td><%= activity.created_at %></td>
                  <td><%= activity.status_name %></td>
                  <td class="txt-left-align">
                    <%= link_to '编辑', 'javascript:;', data: {toggle: 'modals', height: '1000', title: '编辑营销活动', iframe: edit_ec_activity_path(activity)} %>
                    <%= link_to '删除', ec_activity_path(activity), data: {method: :delete, confirm: '确定删除吗？'} %>
                  </td>
                </tr>
            <% end %>
            <% if @activities.blank? %>
              <tr><td colspan="5">无记录</td></tr>
            <% end %>
            </tbody>
          </table>
          <%= paginate @activities %>
        </div>
      </div>

    </div>
  </div>
<% end %>
