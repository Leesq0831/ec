<%= form_for @ec_comment, validate: true do |f| %>
  <div class="modal-body">
    <div class="form-group">
      <label class="control-label">订单编号:  <%= @ec_comment.ec_order_item.ec_order.order_no %></label>
    </div>

    <div class="form-group">
      <label class="control-label">商品名称:  <%= @ec_comment.ec_order_item.product_name %></label>
    </div>

    <div class="form-group">
      <label class="control-label">商品sku:  <%= @ec_comment.ec_order_item.ec_item.sku %></label>
    </div>

    <div class="form-group">
      <label class="control-label">商品规格:  <%= @ec_comment.ec_order_item.ec_item.try(:name) %></label>
    </div>

    <div class="form-group">
      <label class="control-label">评论用户:  <%= @ec_comment.user.try(:wx_user).try(:nickname) %></label>
    </div>

    <div class="form-group">
      <label class="control-label">评论用户:  <%= @ec_comment.star %></label>
    </div>

    <div class="form-group">
      <label class="control-label">评论内容:  <%= @ec_comment.content %></label>
    </div>

    <div class="form-group">
      <label class="control-label">回复内容<span class="required-star">*</span></label>
      <div class="clearfix">
        <%= f.text_area :reply, rows: 4, cols: 20, placeholder: '请输入回复内容', class: "col-xs-12" %>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="modal-footer">
    <input type="submit" class="btn btn-sm btn-primary" data-fn="submit" value="确定" />
    <button type="button" class="btn btn-sm btn-default" data-dismiss="modals">取消</button>
  </div>
<% end %>
