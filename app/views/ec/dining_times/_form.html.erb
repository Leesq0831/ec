<%= form_for @ec_dining_time, url: @ec_dining_time.new_record? ? ec_dining_times_path(@ec_dining_time) : ec_dining_time_path(@ec_dining_time), validate: true, html: {id: 'ec_dining_time_form'} do |f| %>
  <div class="modal-body">
    <div class="form-group">
      <label>就餐时段<span class="required-star">*</span></label>
      <div class="clearfix">
        <div class="input-group col-xs-6 row">
          <%= f.text_field :start_at, class: "timepicker col-xs-12", value: f.object.start_at.present? ? f.object.start_at.strftime("%H:%M") : "0", readonly: true %>
          <span class="input-group-btn">　~　</span>
          <%= f.text_field :end_at, class: "timepicker col-xs-12",value: f.object.end_at.present? ? f.object.end_at.strftime("%H:%M") : "0", readonly: true %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label">排序<span class="required-star">*</span></label>
      <div class="clearfix">
        <%= f.text_field :position, class: "col-md-1"%>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="modal-footer">
    <%= f.submit '保存', class: "btn btn-sm btn-primary" %>
    <%= f.button '取消', type: :reset, class: "btn btn-sm btn-default", data: { dismiss: "modals" } %>
  </div>
<% end %>
