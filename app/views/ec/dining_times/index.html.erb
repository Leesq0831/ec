<% content_for :main_content do %>
    <div class="main-content ">
      <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
          <%= render 'partials/home' %>
          <li><%= link_to '餐厅管理', 'javascript:;' %></li>
          <li><%= link_to '就餐时段', ec_dining_times_path %></li>
        </ul>
        <%#= render '/layouts/qrcode' %>
      </div>
      <div class="page-content">
        <div class="tabbable">
          <%#= render "ec/shop_categories/top_categories" %>
          <div class="row">
            <div class="col-md-12">
              <div class="col-md-12 row">
                <a href="javascript:;" class="btn btn-primary btn-sm" data-target="addVote" data-toggle="modals" data-title="新增就餐时段" data-height="300" data-iframe=" <%= new_ec_dining_time_path %>">新增时段</a>
              </div>
            </div>

            <div class="col-md-12 margin-top-10">
              <table id="rolesTable" class="table table-striped table-bordered table-hover dataTable m">
                <thead>
                  <tr>
                    <th>就餐时段</th>
                    <th>排序</th>
                    <th>操作</th>
                  </tr>
                </thead>
                <tbody>
                  <% @ec_dining_times.each do |ec_dining_time| %>
                    <tr>
                      <td><%= ec_dining_time.start_at.strftime("%H:%M") %> - <%= ec_dining_time.end_at.strftime("%H:%M") %></td>
                      <td><%= ec_dining_time.position %></td>
                      <td>
                        <%= link_to '编辑','javascript:;', data: { toggle: 'modals', height: '300', title: '编辑就餐时段', iframe: edit_ec_dining_time_path(ec_dining_time) } %>
                        <%= link_to '删除', ec_dining_time_path(ec_dining_time),method: :delete, data:{confirm: "确定删除？"} %>
                      </td>
                    </tr>
                  <% end %>
                  <% if @ec_dining_times.count == 0 %>
                    <tr>
                      <td colspan="5"><span class="green">无记录</span></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>
