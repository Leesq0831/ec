<%= form_for @logistic_company, url: @logistic_company.new_record? ? ec_logistic_companies_path : ec_logistic_company_path(@logistic_company), validate: true, html: {id: 'ec_logistic_company_form'} do |f| %>
  <div class="modal-body">
    <div class="form-group">
      <label class="control-label">名称<span class="required-star">*</span></label>
      <div class="clearfix">
        <%= f.text_field :name, class: "col-md-1"%>
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="form-group ">
      <%= f.submit '确定', class: 'btn btn-sm btn-primary' %>
      <%= f.button '取消', type: :reset, class: "btn btn-sm btn-default", data: { dismiss: "modals" } %>
    </div>

  </div>
<% end %>
