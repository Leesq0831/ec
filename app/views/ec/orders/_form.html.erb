<%= form_for @ec_order, validate: true, :html => {id: "order-form", role: "form" } do |f| %>
    <div class="modal-body">
      <div class="form-group">
        <label class="control-label">订单编号<span class="required-star">*</span></label>
        <div class="clearfix">
          <%= f.text_field :order_no, class: 'form-control os ',readonly:true %>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label">下单人<span class="required-star">*</span></label>
        <div class="clearfix">
          <%= text_field_tag :user_name, @ec_order.user.name, class: "col-xs-12", readonly:true %>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label">总金额<span class="required-star">*</span></label>
        <div class="clearfix">
          <%= f.text_field :total_amount, maxlength: 50, class: "col-xs-12",readonly:true %>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label">折扣金额</label>
        <div class="clearfix">
          <%= f.text_field :discount, class: 'form-control', readonly:true %>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label">支付金额</label>
        <div class="clearfix">
          <%= f.text_field :pay_amount, class: 'form-control', readonly: !@ec_order.pending? %>
        </div>
      </div>
<!-- 
      <div class="form-group">
        <label class="control-label">配送类型<span class="required-star">*</span></label>
        <div class="clearfix">
          <span class="col-xs-12"><%= @ec_order.delivery_type_name %></span>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label">配送时间<span class="required-star">*</span></label>
        <div class="clearfix">
          <%= f.text_field :delivery_time, maxlength: 50, class: "col-xs-12 ",readonly:true %>
        </div>
      </div>
 -->
      <div class="form-group">
        <label class="control-label">收货地址<span class="required-star">*</span></label>
        <div class="clearfix">
          <%= f.text_field :address, maxlength: 50, class: "col-xs-12",readonly:true %>
        </div>
      </div>
<!-- 
      <div class="form-group">
        <label class="control-label">取货码<span class="required-star">*</span></label>
        <div class="clearfix">
          <%= f.text_field :captcha, maxlength: 50, class: "col-xs-12",readonly:true %>
        </div>
      </div>
 -->
      <div class="form-group">
        <label class="control-label">支付方式<span class="required-star">*</span></label>
        <div class="clearfix">
          <%= f.text_field :pay_type_name, maxlength: 50, class: "col-xs-12",  disabled: true %>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label">支付状态<span class="required-star">*</span></label>
        <div class="clearfix">
          <span class="col-xs-12"><%= @ec_order.pay_status_name %></span>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label">订单状态<span class="required-star">*</span></label>
        <div class="clearfix">
          <span class="col-xs-12"><%= @ec_order.status_name %></span>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label">物流公司<span class="required-star">*</span></label>
        <div class="clearfix">
          <span class="col-xs-12"><%= @ec_order.ec_logistic_company.try(:name) %></span>
          <%#= f.select :ec_logistic_company_id, EcLogisticCompany.pluck(:name, :id), maxlength: 50, class: "col-xs-12", readonly:true %>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label">物流单号<span class="required-star">*</span></label>
        <div class="clearfix">
          <%= f.text_field :logistic_no, maxlength: 50, class: "col-xs-12", readonly:true %>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label">收货人<span class="required-star">*</span></label>
        <div class="clearfix">
          <%= f.text_field :username, maxlength: 50, class: "col-xs-12" %>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label">联系电话<span class="required-star">*</span></label>
        <div class="clearfix">
          <%= f.text_field :mobile, maxlength: 50, class: "col-xs-12" %>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label">备注<span class="required-star">*</span></label>
        <div class="clearfix">
          <%= f.text_area :description, rows: 4, cols: 20, class: "col-xs-12" %>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="modal-footer">
      <input type="submit" class="btn btn-sm btn-primary" data-fn="submit" value="确定" />
      <button type="button" class="btn btn-sm btn-default" data-dismiss="modals">取消</button>
    </div>
<% end %>

