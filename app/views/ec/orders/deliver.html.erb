<%= form_tag deliver_confirm_ec_order_path(@ec_order), method: :put, validate: true, :html => {id: "order-form", role: "form" } do %>
  <div class="modal-body">
    <div class="form-group">
      <label class="control-label">订单编号<span class="required-star">*</span></label>
      <div class="clearfix">
        <%= text_field_tag :order_no, @ec_order.order_no, class: 'form-control', readonly: true %>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label">物流公司<span class="required-star">*</span></label>
      <div class="clearfix">
        <%= select_tag :logistic_company_id, options_for_select(EcLogisticCompany.normal.pluck(:name, :id).insert(0,["请选择", nil])), class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label">物流单号<span class="required-star">*</span></label>
      <div class="clearfix">
        <%= text_field_tag :logistic_no, @ec_order.logistic_no, maxlength: 50, class: "col-xs-12" %>
      </div>
    </div>

  <!--   <div class="form-group">
        <label class="control-label">配送时间<span class="required-star">*</span></label>
        <div class="clearfix">
          <%#= text_field_tag :delivery_time, @ec_order.delivery_time , class: "col-xs-12 datepicker "%>
        </div>
    </div> -->

  </div>
  <div class="clearfix"></div>
  <div class="modal-footer">
    <input type="submit" class="btn btn-sm btn-primary" data-fn="submit" value="确定" />
    <button type="button" class="btn btn-sm btn-default" data-dismiss="modals">取消</button>
  </div>
<% end %>
