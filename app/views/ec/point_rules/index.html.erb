<% content_for :main_content do %>
  <div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
      <ul class="breadcrumb">
        <%= render 'partials/home' %>
        <li><%= link_to '积分管理', console_url %></li>
        <li><%= link_to '积分规则', ec_point_rules_path%></li>
      </ul>
      <%#= render '/layouts/qrcode' %>
    </div>
    <div class="page-content">
      <div class="tabbabled">
        <%= render "ec/point_rules/top_tab" %>
        <br>
        <div class="row">
          <div class="col-md-12">
            <%= form_for @point_rule, validate: true, html: {class: 'form col-sm-12'} do |f| %>
              <div class="form-group">
                <label>
                  <%= f.check_box :status, class: "ace"  %>
                  <span class="lbl">启用</span>
                </label>
              </div>

              <div class="form-group">
                注册送积分：
                <label>
                  <div class="clearfix">
                    <%= f.text_field :register_points, maxlength: 8 %>积分
                  </div>
                </label>
              </div>
              <div class="form-group">
                消费送积分：
                <label>
                <div class="clearfix">
                  消费每满 <%= f.text_field :order_amount, maxlength: 8 %> 送 <%= f.text_field :order_points, maxlength: 8%>积分
                </div>
                </label>
              </div>
              <div class="form-group">
                评论送积分：
                <label>
                <div class="clearfix" >
                  <%= f.text_field :comment_points, maxlength: 8 %>积分
                </div>
                </label>
              </div>

              <div class="form-group">
                <button type="submit" class="btn btn-sm btn-primary form-submit" data-fn="submit">提交</button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
