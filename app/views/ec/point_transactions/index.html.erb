<% content_for :main_content do %>
  <div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
      <ul class="breadcrumb">
        <%= render 'partials/home' %>
        <li><%= link_to '积分管理', console_url %></li>
        <li><%= link_to '积分查询', ec_point_transactions_path%></li>
      </ul>
      <%#= render '/layouts/qrcode' %>
    </div>

    <div class="page-content">
      <div class="col-md-12">
        <%= form_for @search, url: ec_point_transactions_path, html: {method: :get} do |f| %>
          <div class="col-md-3 row">
            <div class="input-group input-group-sm input-group-text">
              <%= f.text_field :out_trade_no_like, placeholder: "请输入流水单号" %>
            </div>
          </div>
          <div class="col-md-3 row">
            <%= f.submit '查询', class: "btn btn-sm btn-filter btn-primary" %>
          </div>
        <% end %>
      </div>

      <div class="col-md-12 margin-top-10">
        <table id="keyWordsTable" class="table table-striped table-bordered table-hover dataTable m">
          <thead>
            <tr>
              <th>流水单号</th>
              <th>客户姓名</th>
              <th>积分数</th>
              <th>积分获取(消费)</th>
              <th>状态</th>
              <th>描述</th>
              <th>创建时间</th>
            </tr>
          </thead>
          <tbody>
            <% @point_transactions.each do |point_transaction| %>
              <tr>
                <td><%= point_transaction.out_trade_no %></td>
                <td><%= point_transaction.vip_user.try(:name) %></td>
                <td><%= point_transaction.points %></td>
                <td><%= point_transaction.direction_type_name %></td>
                <td><%= point_transaction.status %></td>
                <td><%= point_transaction.description%></td>
                <td><%= point_transaction.created_at %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @point_transactions %>
      </div>
    </div>
  </div>
<% end %>
