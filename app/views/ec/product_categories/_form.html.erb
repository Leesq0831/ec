<%= form_for @category, url: @category.new_record? ? ec_product_categories_path : ec_product_category_path(@category), validate: true,html:{class: 'form'} do |f| %>
  <div class="modal-body">
    <div class="form-group">
      <label>分类名称<span class="required-star">*</span></label>
      <div class="clearfix">
        <%= f.text_field :name, class: 'col-md-12' %>
      </div>
    </div>

    <div class="form-group">
      <label>分类摘要</label>
      <div class="clearfix">
        <%= f.text_field :summary, class: 'col-md-12' %>
      </div>
    </div>

    <div class="form-group">
      <label>状态<span class="required-star">*</span></label>
      <div class="clearfix">
        <%= f.select :status, EcCategory.status_options, {}, class: 'col-xs-5 select' %>
      </div>
    </div>


    <div class="form-group">
      <label>排序<span class="required-star">*</span></label>
      <div class="clearfix">
        <%= f.text_field :position,class: 'col-md-12' %>
      </div>
    </div>

    <div class="form-group">
      <!-- <label>推荐到首页</label> -->
      <div class="clearfix">
        <label><%= f.check_box :is_recommend %> 推荐到首页</label>
      </div>
    </div>

    <div class="form-group">
      <label>首页图片<span class="required-star">*</span> <small>图片建议尺寸：140像素*160像素，支持格式：jpg、png、bmp、gif。</small></label>
      <div class="clearfix">
        <div class="cieldon-file pull-left" data-type="0" data-div="#img-1" data-width="70" data-height="80" data-name="ec_category[icon_key]" data-img="<%= @category.icon_url %>" data-key="<%= @category.icon_key || "" %>"></div>
      </div>
    </div>

    <div class="form-group">
      <label>分类图片<span class="required-star">*</span> <small>图片建议尺寸：640像素*200像素，支持格式：jpg、png、bmp、gif。</small></label>
      <div class="clearfix">
        <div class="cieldon-file pull-left" data-type="0" data-div="#img-1" data-width="320" data-height="100" data-name="ec_category[pic_key]" data-img="<%= @category.pic_url %>" data-key="<%= @category.pic_key || "" %>"></div>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="modal-footer">
    <%= f.submit '保存', class: "btn btn-sm btn-primary" %>
    <%= f.button '取消', type: :reset, class: "btn btn-sm btn-default", data: { dismiss: "modals" } %>
  </div>
<% end %>
