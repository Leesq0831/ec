<%= form_for @tag, url: @tag.new_record? ? ec_product_tags_path : ec_product_tag_path(@tag), method: @tag.new_record? ? 'post' : 'put', validate: true do |f| %>
  <div class="modal-body">
    <div class="form-group">
      <label>服务承诺名称<span class="required-star">*</span></label>
      <div class="clearfix">
        <%= f.text_field :name, class: 'col-md-12' %>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="modal-footer">
    <%= f.submit '保存', class: "btn btn-sm btn-primary" %>
    <%= f.button '取消', type: :reset, class: "btn btn-sm btn-default", data: { dismiss: "modals" } %>
  </div>
<% end %>
