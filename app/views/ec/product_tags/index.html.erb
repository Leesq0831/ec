<% content_for :main_content do %>
    <div class="main-content ">
      <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
          <%= render 'partials/home' %>
          <li><%= link_to '商城管理', 'javascript:;' %></li>
          <li><%= link_to '服务承诺', ec_product_tags_path %></li>
        </ul>
        <!-- .breadcrumb -->
        <%#= render '/layouts/qrcode' %>
      </div>
      <div class="page-content">
        <div class="tabbable">
          <%= render "ec/product_categories/top_categories" %>

          <div class="row margin-top-20">
            <div class="col-xs-12">
              <div class="pull-right">
                <%= link_to '新增', 'javascript:;', data: {toggle: 'modals', height: '300', title: '新增服务承诺', iframe: new_ec_product_tag_path}, class: 'btn btn-primary btn-sm'%>
                <%#= link_to '返回', ec_product_tags_path, class: 'btn btn-default btn-sm margin-left-20' %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="margin-top-10 col-sm-12">
              <table id="table1" class="table table-striped table-bordered table-hover table-down">
                <tr>
                  <th>服务承诺</th>
                  <th width="180">操作</th>
                </tr>
                <% @tags.each do |t| %>
                <tr>
                  <td><%= t.name %></td>
                  <td>
                    <%= link_to '编辑', 'javascript:;', data: {toggle: 'modals', height: '300', title: '编辑服务承诺', iframe: edit_ec_product_tag_path(t)} %>
                    <%= link_to '删除',  ec_product_tag_path(t), data: {method: :delete, confirm: '确定要删除吗？'} %>
                  </td>
                </tr>
                <% end %>
                <% if @tags.blank? %><tr><td colspan="<%= params[:category_type] == 'as_product' ? 3 : 2 %>">无数据</td></tr><% end %>
              </table>
              <%= paginate @tags %>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>
<% content_for :custom_js do %>
    <script>
        $(function(){
          $('#per_page_total').change(function(){
            $('#search_tag #per').val($(this).val());
            $('#search_tag').submit();
          });
        });
    </script>

<% end %>
