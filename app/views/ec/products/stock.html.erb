<%= form_for EcStock.new, url: stock_in_ec_products_path, html: { method: :get, id: 'ec_stock_form'} do |f| %>
  <%= f.hidden_field :status, value: 1 %>

  <div class="modal-body">
    <div class="form-group">
      <label class="control-label">入库商品<span class="required-star">*</span></label>
    </div>

    <table id="orderTable" class="table table-striped table-bordered table-hover dataTable ">
      <thead>
      <tr>
        <th>名称</th>
        <th>规格</th>
        <th>价格</th>
        <th>数量</th>
      </tr>
      </thead>
      <tbody>
        <% @ec_items.each do |ec_item| %>
          <%= hidden_field_tag 'ec_items[][id]', ec_item.id %>
          <tr>
            <td><%= ec_item.ec_product.try(:name) %></td>
            <td><%= ec_item.name %></td>
            <td><%= f ec_item.price %></td>
            <td><%= text_field_tag 'ec_items[][qty]' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="clearfix"></div>
  <div class="modal-footer">
    <%= f.submit '保存', class: "btn btn-sm btn-primary" %>
    <%= f.button '取消', type: :reset, class: "btn btn-sm btn-default", data: { dismiss: "modals" } %>
  </div>
<% end %>
