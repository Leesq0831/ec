<style type="text/css">
  .select-ec {
    width: 150px;
  }
</style>
<% content_for :main_content do %>
  <div class="main-content ">
    <div class="breadcrumbs" id="breadcrumbs">
      <ul class="breadcrumb">
        <%= render 'partials/home' %>
        <li><%= link_to '餐厅管理' %></li>
        <li><%= link_to '线下酒柜', ec_shop_cabinets_path %></li>
      </ul>
      <%#= render '/layouts/qrcode' %>
    </div>

    <div class="page-content">
      <div class="tabbable">
        <%= render "ec/shop_categories/top_categories" %>

        <div class="row">
          <div class=" col-md-12 margin-top-20">
            <%= form_for @search, url: ec_shop_cabinets_path,  html: { method: :get } do |f| %>
              <div class="col-md-3">
                <div class="input-group input-group-text">
                  <span class="input-group-addon">餐厅：</span>
                  <%= f.select :ec_shop_id_eq, EcShop.pluck(:name, :id), {include_blank: '全部'}, class: 'col-xs-12' %>
                </div>
              </div>

              <div class="col-md-3">
                <div class="input-group input-group-sm input-group-text">
                  <%= f.submit '查询', class: 'btn btn-sm btn-filter btn-primary' %>
                </div>
              </div>

              <div class="col-md-6">
                <div class="pull-right">
                 <%= link_to '新增', 'javascript:;', data: {toggle: 'modals', height: '1000', title: '新增酒柜', iframe: new_ec_shop_cabinet_path}, class: 'btn btn-primary btn-sm'%>       
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <div class=" col-md-12 margin-top-10">
          <table id="rolesTable" class="table table-striped table-bordered table-hover dataTable m">
            <thead>
              <tr>
                <th>所属餐厅</th>
                <th>酒柜编号</th>
                <th>酒柜名称</th>
                <th>添加时间</th>
                <th>状态</th>
                <th>操作</th>
              </tr>
            </thead>
            <tboday>
              <% @ec_shop_cabinets.each do |ec_shop_cabinet| %>
                <tr>
                  <td><%= ec_shop_cabinet.ec_shop.try(:name) %></td>
                  <td><%= ec_shop_cabinet.no %></td>
                  <td><%= ec_shop_cabinet.name %></td>
                  <td><%= ec_shop_cabinet.created_at %></td>
                  <td><%= ec_shop_cabinet.status_name %></td>
                  <td>
                    <%=link_to '编辑', 'javascript:;', class: 'fgreen', data: {target: 'editVote', toggle: 'modals', title: '编辑酒柜', height:'1000',iframe: edit_ec_shop_cabinet_path(ec_shop_cabinet)} %>
                    <%= link_to '删除', ec_shop_cabinet_path(ec_shop_cabinet),method: :delete, data:{confirm: "确定删除？"} %> 
                  </td>
                </tr>
              <% end %>
              <% if @ec_shop_cabinets.count == 0 %>
                <tr>
                  <td colspan="5"><span class="green">无记录</span></td>
                </tr>
              <% end %>
            </tboday>
          </table>
          <%= paginate @ec_shop_cabinets %>
        </div>
      </div>
    </div>
  </div>

</div>
<% end %>
