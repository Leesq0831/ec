<%= form_for @category, url: @category.new_record? ? ec_shop_categories_path(@category) : ec_shop_category_path(@category), validate: true, html: {id: 'ec_shop_category_form'} do |f| %>
  <div class="modal-body">
    <div class="form-group">
      <label>分类名称<span class="required-star">*</span></label>
      <div class="clearfix">
        <%= f.text_field :name, class: 'col-md-12' %>
      </div>
    </div>

    <div class="form-group">
      <label>排序<span class="required-star">*</span></label>
      <div class="clearfix">
        <%= f.text_field :position, class: 'col-md-12' %>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="modal-footer">
    <%= f.submit '保存', class: "btn btn-sm btn-primary" %>
    <%= f.button '取消', type: :reset, class: "btn btn-sm btn-default", data: { dismiss: "modals" } %>
  </div>
<% end %>

