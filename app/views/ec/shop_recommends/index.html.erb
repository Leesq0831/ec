<style type="text/css">
  .select-ec {
    width: 150px;
  }
</style>
<% content_for :main_content do %>
    <div class="main-content ">
      <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
          <%= render 'partials/home' %>
          <li><%= link_to '餐厅管理', ec_shops_path %></li>
          <li><%= link_to '推荐管理', ec_shop_recommends_path %></li>
        </ul>
      </div>

      <div class="page-content">
        <div class="tabbable">
          <%= render "ec/shop_categories/top_categories" %>

          <div class="row">
            <div class=" col-md-12 margin-top-20">
                <%= form_for @search, url: ec_shop_recommends_path,validates: true,  html: { method: :get } do |f| %>
                  <div class="col-md-2">
                    <div class="input-group input-group-sm input-group-text">
                      <%= f.text_field :title_like, placeholder:"请输入标题名称", class: 'col-xs-12' %>
                    </div>
                  </div>

                  <div class="col-md-2">
                    <div class="input-group input-group-sm input-group-text">
                      <%= f.select :recommend_type_eq, EcShopRecommend.recommend_type_options, include_blank: '推荐类型', class: 'col-xs-12' %>
                    </div>
                  </div>

                  <div class="col-md-2">
                    <div class="input-group input-group-sm input-group-text">
                      <%= f.submit '查询', class: 'btn btn-sm btn-filter btn-primary' %>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="input-group input-group-sm input-group-text pull-right">
                      <a href="javascript:;" class="btn btn-primary btn-sm pull-right " data-target="addVote" data-toggle="modals" data-title="新增推荐" data-height="1000" data-iframe=" <%= new_ec_shop_recommend_path %>">新增</a>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>

            <div class=" col-md-12 margin-top-20">
              <table id="rolesTable" class="table table-striped table-bordered table-hover dataTable m">
                <thead>
                    <tr>
                      <th>推荐类型</th>
                      <th>餐厅名称</th>
                      <th>推荐标题</th>
                      <th>封面图片</th>
                      <th>排序</th>
                      <th>更新时间</th>
                      <th>操作</th>
                    </tr>
                </thead>
                <tboday>
                  <% @ec_shop_recommends.each do |ec_shop_recommend| %>
                      <tr>
                        <td><%= ec_shop_recommend.recommend_type_name %></td>
                        <td><%= ec_shop_recommend.ec_shop.try(:name) %></td>
                        <td><%= ec_shop_recommend.title %></td>
                        <td><img src="<%= ec_shop_recommend.format_pic_url(width: 100, height: 100) %>" width="50" class="margin-right-10"></td>
                        <td><%= ec_shop_recommend.position %></td>
                        <td><%= ec_shop_recommend.updated_at %></td>
                        <td>
                          <%= link_to '商品管理',ec_shop_recommend_path(ec_shop_recommend)%>
                          <%= link_to '编辑', 'javascript:;', data: {toggle: 'modals', target: 'roleModal', title: '编辑推荐', width: '800', height: '1000', iframe: edit_ec_shop_recommend_path(ec_shop_recommend)} %>
                          <%= link_to '删除', ec_shop_recommend_path(ec_shop_recommend),method: :delete, data:{confirm: "确定删除？"} %>
                        </td>
                      </tr>
                  <% end %>
                  <% if @ec_shop_recommends.count == 0 %>
                    <tr>
                      <td colspan="5"><span class="green">无记录</span></td>
                    </tr>
                <% end %>
                </tboday>
              </table>
              <%= paginate @ec_shop_recommends %>
            </div>
          </div>

        </div>
      </div>

    </div>

<% end %>
