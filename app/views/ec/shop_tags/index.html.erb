<% content_for :main_content do %>
    <div class="main-content ">
      <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
          <%= render 'partials/home' %>
          <li><%= link_to '商城设置', 'javascript:;' %></li>
          <li><%= link_to '标签管理', ec_shop_tags_path %></li>
        </ul>
        <!-- .breadcrumb -->
        <%#= render '/layouts/qrcode' %>
      </div>
      <div class="page-content">
        <div class="tabbable">
          <%#= render "ec/shop_categories/top_categories" %>

          <div class="row">
           <div class="col-md-12">
             <a href="javascript:;" class="btn btn-primary btn-sm pull-right " data-target="addVote" data-toggle="modals" data-title="新增标签" data-height="1000" data-iframe=" <%= new_ec_shop_tag_path %>">新增</a>
           </div>

          </div>
          <div class="row">
            <div class="margin-top-10 col-sm-12">
              <table id="table1" class="table table-striped table-bordered table-hover table-down">
                <tr>
          <th>标签名称</th>
                  <% if params[:category_type] == 'as_product' %>
            <th>标签项总数</th>
                  <% end %>
                  <th width="180">操作</th>
                </tr>
                <% @tags.each do |t| %>
                <tr>
                  <td><%= t.name %></td>
                  <% if params[:category_type] == 'as_product' %>
                  <td><%= t.children_count %>个标签项</td>
                  <% end %>
                  <td>

                    <%=link_to '编辑', 'javascript:;', class: 'fgreen', data: {target: 'editVote', toggle: 'modals', title: '编辑分类', height:'1000',iframe: edit_ec_shop_tag_path(t)} %>
                   <%=link_to '删除',ec_shop_tag_path(t), method: :delete, data: {confirm:"确定删除?"} %>

                  </td>
                </tr>
                <% end %>
                <% if @tags.blank? %><tr><td colspan="<%= params[:category_type] == 'as_product' ? 3 : 2 %>">无数据</td></tr><% end %>
              </table>

              <%= paginate @tags %>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>
<% content_for :custom_js do %>
    <script>
        $(function(){
          $('#per_page_total').change(function(){
            $('#search_tag #per').val($(this).val());
            $('#search_tag').submit();
          });
        });
    </script>

<% end %>
