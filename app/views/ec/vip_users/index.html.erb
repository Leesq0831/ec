<style type="text/css">
  .select-ec {
    width: 150px;
  }
</style>
<% content_for :main_content do %>
    <div class="main-content ">
      <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
          <%= render 'partials/home' %>
          <li><%= link_to '会员管理' %></li>
        </ul>
      </div>

      <div class="page-content">
        <div class="row">

          <div class=" col-md-12 ">
              <%= form_for @search, url: ec_vip_users_path,  html: { method: :get } do |f| %>
                <div class="col-md-2">
                  <div class="input-group input-group-sm input-group-text">
                    <%= f.text_field :user_name_like, placeholder:"请输入会员姓名", class: 'col-xs-12' %>
                  </div>
                </div>

                <div class="col-md-1">
                  <div class="input-group input-group-sm input-group-text">
                    <%= f.submit '查询', class: 'btn btn-sm btn-filter btn-primary' %>
                  </div>
                </div>

                <div class="col-md-1">
                  <div class="input-group input-group-sm input-group-text">
                    <%= link_to '导出', ec_vip_users_path(:format => :xls, search: params[:search]) ,class: 'btn btn-sm btn-filter btn-primary' %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <div class=" col-md-12 margin-top-10">
            <table id="rolesTable" class="table table-striped table-bordered table-hover dataTable m">
              <thead>
                  <tr>
                    <th>姓名</th>
                    <th>等级</th>
                    <th>编号</th>
                    <th>年龄</th>
                    <th>性别</th>
                    <th>可用积分</th>
                    <th>冻结积分</th>
                    <th>总积分</th>
                    <th>联系方式</th>
                    <th>地址</th>
                    <th>状态</th>
                    <th>备注</th>
                    <th>操作</th>
                  </tr>
              </thead>
              <tboday>
                <% @vip_users.each do |vip_user| %>
                    <tr>
                      <td><%= vip_user.name %></td>
                      <td><%= vip_user.vip_grade_id %></td>
                      <td><%= vip_user.user_no %></td>
                      <td><%= vip_user.age %></td>
                      <td><%= vip_user.gender_name %></td>
                      <td><%= vip_user.usable_points %></td>
                      <td><%= vip_user.froze_points %></td>
                      <td><%= vip_user.total_points %></td>
                      <td><%= vip_user.mobile %></td>
                      <td><%= [vip_user.province.try(:name), vip_user.city.try(:name), vip_user.district.try(:name), vip_user.address].join('-') %></td>
                      <td><%= vip_user.status_name %></td>
                      <td><%= vip_user.description %></td>
                      <td>
                        <%#= link_to '编辑', 'javascript:;', data: {toggle: 'modals', target: 'roleModal', title: '编辑订单', width: '', height: '550', iframe: edit_ec_order_path(ec_order)} %>
                        <%#= link_to '发货', receipt_ec_order_path(ec_order), data: {confirm: '确认发货？'}, method: :put if ec_order.waiting? %>
                        <%#= link_to '已完成', completed_ec_order_path(ec_order), data: {confirm: '确认已完成？'}, method: :put if ec_order.receipt? %>
                        <%#= link_to '取消', cancel_ec_order_path(ec_order), data: {confirm: '确认取消？'}, method: :put %>
                        <%#= link_to '已退款', back_ec_order_path(ec_order), data: {confirm: '确认已退款？'}, method: :put if ec_order.refundable? %>
                      </td>
                    </tr>
                <% end %>
                <% if @vip_users.count == 0 %>
                  <tr>
                    <td colspan="13"><span class="green">无记录</span></td>
                  </tr>
              <% end %>
              </tboday>
            </table>
            <%= paginate @vip_users %>
          </div>

        </div>
      </div>

    </div>

<% end %>
