<% content_for :main_content do %>
    <div class="main-content ">
      <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
          <%= render 'partials/home' %>
          <li><%= link_to '账号权限' %></li>
          <li><%= link_to '角色管理', employee_roles_path %></li>
        </ul>
        <%#= render '/layouts/qrcode' %>
      </div>

      <div class="page-content">
        <div class="row">

          <div class="col-md-12">
            <div class="col-md-2 row">
              <%= form_for @search, html: { method: :get } do |f| %>
              <div class="input-group input-group-sm input-group-text">
                <%= f.text_field :name_like, placeholder:"请输入名称", class: 'col-xs-12' %>
                <span class="input-group-addon">
                    <%= f.submit '查询', class: 'btn btn-sm btn-filter btn-primary' %>
                </span>
              </div>
              <% end %>
            </div>
            <div class="col-md-3 row pull-right">
              <%= link_to '新增', 'javascript:;', class: 'btn btn-primary btn-sm pull-right', data: {toggle: 'modals', target: 'roleModal', title: "新增角色", width: '', height:"550", iframe: new_employee_role_path}%>
            </div>
          </div>

          <div class=" col-md-12 margin-top-10">
            <table id="rolesTable" class="table table-striped table-bordered table-hover dataTable m">
              <thead>
                  <tr>
                    <th>角色名称</th>
                    <th width="80%">权限</th>
                    <th>操作</th>
                  </tr>
              </thead>
              <tboday>
                <% @employee_roles.each do |role| %>
                    <tr>
                      <td><%= role.name %></td>
                      <td><%= role.permissions.map(&:name).join(',  ') %></td>
                      <td>
                        <%= link_to '编辑', 'javascript:;', data: {toggle: 'modals', target: 'roleModal', title: '编辑角色', width: '', height: '550', iframe: edit_employee_role_path(role)} %>
                        <%= link_to '删除', employee_role_path(role), data: {confirm: '确认删除？', url: employee_role_path(role), method: :delete} %>
                      </td>
                    </tr>
                <% end %>
              </tboday>
            </table>
            <%= paginate @employee_roles %>
            <div class="clearfix"></div>
          </div>

        </div>
      </div>

    </div>

<% end %>
