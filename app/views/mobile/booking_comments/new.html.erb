<% title @booking.name %>
<% content_for :booking_top_pic do %>
  <header>
    <a href="<%= mobile_booking_booking_comments_url(site_id: @site.id, booking_item_id: @booking_item.id) %>" class="ico-prev">
      <img src="/assets/mobile/wserver/ico-back.png"/></a>
    <h1>写评论</h1>
  </header>
<% end %>

<div class="box-comment">
  <div class="hd">
    <h2 class="ellipsis">发表评论</h2>
    <a class="ico ico-heart fr"><em><%= @comments.count %></em></a>
  </div>
  <div class="bd">
    <div class="fr">
      <%= form_for @comment, url: mobile_booking_booking_comments_url, method: 'post' do |f| %>
        <%= f.hidden_field :site_id %>
        <%= f.hidden_field :commentable_id %>
        <%= f.hidden_field :commentable_type %>
        <%= f.hidden_field :commenter_id %>
        <%= f.hidden_field :commenter_type %>
        <div class="bd-comment">
          <%= f.text_area :comment, rows: 3, cols: 40, maxlength: 140, placeholder: '请输入您的评论' %>
          <div class="bd-face">
            <!--<a class="ico icon-smile"></a>-->
            <span class="fr" id="limit_word_count">140</span>
          </div>
        </div>
        <div class="bd-btn">
          <input type="submit" class="btn" value="发布"/>
        </div>
      <% end %>
    </div>
  </div>
  <div class="ft ft-comment">
    <h3>热门评论</h3>
    <% @comments.first(3).each do |booking_comment|%>
      <div class="ft-list">
        <a href="<%= mobile_booking_booking_comments_url(site_id: @site.id, booking_item_id: @booking_item.id)%>" class="box-block"></a>
        <div class="fr">
          <b><%= booking_comment.commenter.try(:name) %></b>
          <span>
            <i><%= booking_comment.created_at.to_date %>  <%#= booking_comment.user.try(:address)%></i>
            <!--<i class="fr ico icon-heart"><em>1692</em></i>-->
          </span>
          <p><%= booking_comment.comment %></p>
          <p class="hide"><%= booking_comment.comment %></p>
          <!--<a class="btn-show">显示更多</a>-->
        </div>
      </div>
    <% end %>
    <% if @comments.count == 0 %>
      <p class="tcenter ft-null">暂无评论</p>
    <% end %>
  </div>
</div>

<% content_for :comment_js do %>
	<script>
		$(".btn").click(function(){
			if($("#comment_comment").val() == ''){
				alert("评论不能为空！");
				$("#comment_comment").focus();
				return false;
			}else{
				$("form").submit();
			}
		});

		$("#comment_comment").keydown(function(){
			var current_count = $(this).val().length;
			var ret = 140 - current_count;
			$("#limit_word_count").text(ret);
		});
	</script>
<% end %>
