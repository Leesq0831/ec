<div style="padding-top: 10px;">
  <div id="article-view-count" style="display: inline;">阅读 <%= resource.view_count %></div>
  <%# if user %>
    <!-- <div class="article-like" style="display: inline;"> -->
      <%# if @like.new_record? %>
        <%#= render "mobile/likes/like", like: @like %>
      <%# else %>
        <%#= render "mobile/likes/dislike", like: @like %>
      <%# end %>
    <!-- </div> -->
  <%# end %>
</div>
<div style="text-align:center;padding: 10px;">
<% if user %>
    <div class="article-like" style="display: inline;">
      <% if @like.new_record? %>
        <%= render "mobile/likes/like", like: @like %>
      <% else %>
        <%= render "mobile/likes/dislike", like: @like %>
      <% end %>
    </div>
    <div class="like-image">
      <div class="new-like-count"><span><%= @like.likeable.likes.count %></span>赞</div>
      <div style="margin-left: 10%;" class="like-image-list">
        <%= render "mobile/likes/like_img", like: @like_images %>
      </div>
    </div>
  <% end %>
</div>

<style type="text/css">
 .like-image{text-align: left;border-top: 1px solid #b3b1b1;padding: 8px 0;margin-top: 20px; position: relative;border-bottom: 1px solid #b3b1b1;}
 .like-image img{width: 30px;height: auto; border-radius: 50%;}
 .new-like-count{ position: absolute;top: 50%;margin-top: -8px; color: #666;font-size: 16px;margin-left: 3px;}

  .article-like {
    padding-top: 20px;
  }

  #article-view-count {
    padding-left: 5px;
    padding-right: 10px;
  }

  .like-btn {
    background: transparent url(http://img.1nongfu.com/new_like.png) no-repeat 0 0;
    width: 50px;
    height: 50px;
    display: inline-block;
    -webkit-background-size: 100% auto;
    background-size: 100% auto;
    margin-bottom: -5px;
  }

  .dislike {
    background-position: 0 -52px;
  }
  .like-count{
    font-size: 20px;
    color: #ed7525;
    margin-left: 3px;}
</style>
