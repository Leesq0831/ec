<% provide(:title, "微信支付") %>
<div class="page">
  <div class="weui-msg">
    <div class="weui-msg__icon-area"><i class="weui-icon-warn weui-icon_msg"></i></div>
    <div class="weui-msg__text-area">
      <h2 class="weui-msg__title">支付失败!</h2>
      <p class="weui-msg__desc">订单金额：<%= @payment.total_fee %>元</p>
    </div>
    <div class="weui-msg__opr-area">
      <p class="weui-btn-area">
        <%= link_to '重新支付', pay_wxpay_pay_url(account_id: @payment.account_id, out_trade_no: @payment.out_trade_no, openid: params[:openid], showwxpaytitle: 1), class: 'weui-btn weui-btn_primary'  %>
        <%= link_to '暂不支付', wap_order_path(@payment.paymentable), class: 'weui-btn weui-btn_default' %>
      </p>
    </div>
    <%#= render 'footer' %>
  </div>
</div>
