    <div class="weui-msg__opr-area">
      <p class="weui-btn-area">
        <%= link_to '确定', 'javascript:void(0);', class: 'weui-btn weui-btn_primary', id: 'site' %>
      </p>
    </div>
    <%#= render 'footer' %>
  </div>
</div>

<%= render 'pay' %>
