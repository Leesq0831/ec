<% provide(:title, "支付成功") %>

<div class="page">
  <div class="weui-msg">
    <div class="weui-msg__icon-area"><i class="weui-icon-success weui-icon_msg"></i></div>
    <div class="weui-msg__text-area">
      <h2 class="weui-msg__title">支付成功!</h2>
      <p class="weui-msg__desc">订单金额：<%= f @payment.amount %>元</p>
