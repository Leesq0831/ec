<%= form_for @doctor_arrange_item, url: complete_hospital_order_path(@doctor_arrange_item), validate: true, method: :post, html: {class: 'form'} do |f| %>
<div class="modal-body">
  <div class="col-xs-12">

    <div class="form-group">
      <label class="control-label">预约时间：<%= @doctor_arrange_item.doctor_watch.arrange_time %></label>
    </div>
    <div class="form-group">
      <label class="control-label">预约单号：<%= @doctor_arrange_item.order_no %></label>
    </div>
    <div class="form-group">
      <label class="control-label">姓名：<%= @doctor_arrange_item.name %></label>
    </div>
    <div class="form-group">
      <label class="control-label">手机：<%= @doctor_arrange_item.mobile %></label>
    </div>

    <div class="form-group">
      <label class="control-label">就诊结果<span class="required-star">*</span></label>
      <div class="clearfix">
        <%= f.text_area :result, rows: 3, class: "col-xs-12" %>
      </div>
    </div>

  </div>
</div>

<div class="clearfix"></div>
<div class="modal-footer">
  <button type="submit" class="btn btn-sm btn-primary form-submit" data-fn="submit">确定就诊</button>
  <button type="button" class="btn btn-sm btn-default" data-dismiss="modals">取消</button>
</div>
<% end %>
