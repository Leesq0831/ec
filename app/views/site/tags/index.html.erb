<% content_for :main_content do %>
    <div class="main-content ">
      <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
          <%= render 'partials/home' %>
          <li><%= link_to '内容管理', 'javascript:;' %></li>
          <li><%= link_to '标签管理', site_tags_path %></li>
        </ul>
      </div>
      <div class="page-content">
        <div class="tabbable">
          <%= render "site/categories/top_categories" %>

          <div class="row margin-top-20">
            <div class="col-xs-12">
              <div class="pull-right">
                <%= link_to '新增', 'javascript:;', data: {toggle: 'modals', height: '300', title: '新增标签', iframe: new_site_tag_path}, class: 'btn btn-primary btn-sm'%>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="margin-top-10 col-sm-12">
              <table id="table1" class="table table-striped table-bordered table-hover table-down">
                <tr>
                  <th>名称</th>
                  <th width="180">操作</th>
                </tr>
                <% @tags.each do |t| %>
                <tr>
                  <td><%= t.name %></td>
                  <td>
                    <%= link_to '编辑', 'javascript:;', data: {toggle: 'modals', height: '300', title: '编辑标签', iframe: edit_site_tag_path(t)} %>
                    <%= link_to '删除',  site_tag_path(t), data: {method: :delete, confirm: '确定要删除吗？'} %>
                  </td>
                </tr>
                <% end %>
                <% if @tags.blank? %>
                  <tr><td colspan="2">无记录</td></tr>
                <% end %>
              </table>
              <%= paginate @tags %>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>
<% content_for :custom_js do %>
    <script>
        $(function(){
          $('#per_page_total').change(function(){
            $('#search_tag #per').val($(this).val());
            $('#search_tag').submit();
          });
        });
    </script>

<% end %>
