<div class="html zhifubao" style="display: none;">
  <p class="imga"><img src="/wap/assets/images/zhifu01.png" class="za"></p>
  <p class="imgb"><img src="/wap/assets/images/zhifu02.png" class="zb"></p>
  <%= link_to '支付', @order.payment.get_pay_url(@payment_params, request), id: 'Pay_btn', style: 'display: none;' %>
</div>
<script type="text/javascript">
  $(function(){
    if (isWeiXin()) {
      $('.zhifubao').css('display', 'block');
    } else {
      var url = $('#Pay_btn').attr('href')
      window.location.href = url;
    }

    function isWeiXin(){
      var ua = window.navigator.userAgent.toLowerCase();
      if(ua.match(/MicroMessenger/i) == 'micromessenger'){
        return true;
      }else{
        return false;
      }
    }
  });
</script>
